{
  "author": "ismay",
  "description": "A metalsmith plugin for in-place templating",
  "license": "MIT",
  "keywords": [
    "in-place",
    "templating",
    "metalsmith-plugin",
    "metalsmith"
  ],
  "main": "lib/index.js",
  "name": "@metalsmith/in-place",
  "repository": {
    "type": "git",
    "url": "https://github.com/metalsmith/in-place.git"
  },
  "homepage": "https://github.com/metalsmith/in-place#readme",
  "bugs": {
    "url": "https://github.com/metalsmith/in-place/issues"
  },
  "version": "4.5.0",
  "scripts": {
    "changelog": "auto-changelog -u --starting-date 2021-12-01 --sort-commits date-desc --commit-limit false --ignore-commit-pattern '(dev|Release|Merge)'",
    "coverage": "nyc report --reporter=text-lcov > ./coverage.info",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "test": "nyc mocha",
    "release": "release-it",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run ."
  },
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^7.0.4",
    "jstransformer-handlebars": "^1.2.0",
    "jstransformer-marked": "^1.1.0",
    "jstransformer-pug": "^0.4.0",
    "metalsmith": "^2.4.2",
    "mocha": "^9.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "release-it": "^14.12.3"
  },
  "dependencies": {
    "debug": "^4.0.0",
    "inputformat-to-jstransformer": "^1.2.1",
    "is-utf8": "^0.2.1",
    "jstransformer": "^1.0.0"
  },
  "peerDependencies": {
    "metalsmith": "^2.4.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "engines": {
    "node": ">=10"
  }
}
