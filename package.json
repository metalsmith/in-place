{
  "author": "ismay",
  "description": "A metalsmith plugin for in-place templating.",
  "license": "MIT",
  "main": "lib/index.js",
  "name": "metalsmith-in-place",
  "repository": "git://github.com/metalsmith/metalsmith-in-place.git",
  "version": "4.2.0",
  "scripts": {
    "precommit": "lint-staged",
    "lint:js": "eslint '**/*.js'",
    "lint:prettier": "prettier --list-different '**/*.js'",
    "test": "jest",
    "test:coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/*.js"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "eslint",
      "eslint-plugin-import"
    ]
  },
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^3.0.0",
    "eslint-plugin-import": "^2.13.0",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "jstransformer-handlebars": "^1.0.0",
    "jstransformer-marked": "^1.0.2",
    "lint-staged": "^7.0.0",
    "metalsmith": "^2.1.0",
    "prettier": "^1.9.2",
    "rimraf": "^2.5.3"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "inputformat-to-jstransformer": "^1.2.1",
    "is-utf8": "^0.2.1",
    "jstransformer": "^1.0.0",
    "multimatch": "^2.1.0"
  }
}
